# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Notion Integration Token (create at https://www.notion.so/my-integrations)
NOTION_TOKEN=secret_your_integration_token_here

# Notion Database ID for tasks (from database URL)
NOTION_PROJECTS_DATABASE_ID=your_database_id_here

# Notion Data Source ID for projects (from Database retrieval)
NOTION_PROJECTS_DATA_SOURCE_ID=your_data_source_id_here

# Notion Database ID for tasks (from database URL)
NOTION_TASKS_DATABASE_ID=your_tasks_database_id_here

# Notion Data Source ID for tasks database (from Database retrieval)
NOTION_TASKS_DATA_SOURCE_ID=your_task_data_source_id_here

# Notion Page ID for elaboration (legacy)
NOTION_INBOX_PAGE_ID=your_page_id_here

# Google API Key (for Gemini/Gemma models)
GOOGLE_API_KEY=your_google_api_key_here

# PROD (real APIs) or TEST (dry-run with dummy LLM + debug task files)
RUNTIME_MODE=PROD
